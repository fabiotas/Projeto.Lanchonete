<div id="area">
    <form action="/Usuario/Adiciona" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input name="usuario.Nome" class="form-control" type="text" id="nome" />
        </div>
        <div>
            <label for="exampleInputEmail1">Email:</label>
            <input type="email" class="form-control" name="usuario.Email" id="email" aria-describedby="emailHelp" placeholder="Informe o email">
        </div>
        <div>
            <label for="nome">Login:</label>
            <input name="usuario.Login" class="form-control" type="text" placeholder="Default input" id="login" />
        </div>
        <div>
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" class="form-control" name="usuario.Senha" id="senha" placeholder="Password">
        </div>
